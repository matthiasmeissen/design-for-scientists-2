---
const { type } = Astro.props;
---

<div class="block">
    <slot name="first" />
    <slot name="second"/>
</div>

<style>
    .block {
        width: 100%;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--spacing-l);
    }

    @media (max-width: 1120px) {
        .block {
            grid-template-columns: 1fr 1.5fr;
        }
    }

    @media (max-width: 820px) {
        .block {
            grid-template-columns: 1fr;
        }
    }
</style>
