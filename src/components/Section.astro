---
const { title, chapter } = Astro.props;
---

<section>
    <div>
        <p>{ chapter }</p>
        <p>{ title }</p>
    </div>
    <slot />
</section>

<style>
    section {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: var(--spacing-xl);
    }

    div {
        position: sticky;
        top: 0;
        z-index: 100;
        background-color: var(--color-background-primary);
        width: 100%;
        display: flex;
        gap: var(--spacing-l);
        padding: var(--spacing-m) 0;
        border-bottom: 1px solid var(--color-border-primary);
    }

    p {
        width: 100%;
    }
</style>
