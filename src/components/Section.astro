---
const { title, chapter } = Astro.props;
---

<section>
    <div>
        <p>{ chapter }</p>
        <p>{ title }</p>
    </div>
    <slot />
</section>

<style>
    section {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 80px;
    }

    div {
        width: 100%;
        display: flex;
        gap: 32px;
        padding-bottom: 32px;
        border-bottom: 1px solid hsl(0, 0%, 80%);
    }

    p {
        width: 100%;
    }
</style>
