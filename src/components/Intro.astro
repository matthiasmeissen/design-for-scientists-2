---
interface Props {
	title: string;
	body: string;
}

const { title, body } = Astro.props;
---

<section>
    <h1>{ title }</h1>
    <p>{ body }</p>
    <div class="image"></div>
</section>

<style>
    section {
        width: 100%;
    }

    h1 {
        font-size: 2rem;
    }

    p {
        font-size: 1.5rem;
    }

    .image {
        width: 100%;
        height: 200px;
        background-color: hsl(0, 0%, 90%);
        border-radius:20px
    }
</style>
