---
const { title, body } = Astro.props;
---

<section>
    <h1 class="heading-l">{ title }</h1>
    <p class="body-l">{ body }</p>

    <div class="image"></div>
</section>

<style>
    section {
        width: 100%;
    }

    section h1 {
        margin-bottom: 24px;
    }

    section p {
        margin-bottom: 100px;
        max-width: 600px;
    }

    .image {
        width: 100%;
        height: 320px;
        background-color: hsl(0, 0%, 90%);
        border-radius:20px
    }
</style>
