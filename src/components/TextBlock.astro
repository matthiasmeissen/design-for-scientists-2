---
const { title } = Astro.props;
---

<section>
    <h3>{ title }</h3>
    <div>
        <slot>
    </div>
</section>

<style>
    section {
        width: 100%;
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 32px;
    }
    
    div {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }
</style>
