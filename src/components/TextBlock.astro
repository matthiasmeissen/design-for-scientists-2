---
import Block from "./Block.astro";
const { title, id } = Astro.props;
---

<div class="textblock" id={id}>
    <Block>
        <h3 slot = "first" >{ title }</h3>
        <div slot = "second" class="inner">
            <slot>
        </div>
    </Block>
</div>

<style>
    .textblock {
        padding-top: var(--spacing-4xl);
    }

    h3 {
        padding-right: 20%;
    }
    
    .inner {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    @media (max-width: 820px) {
        .textblock {
            padding-top: var(--spacing-2xl);
        }

        h3 {
            padding-right: 0;
        }
    }

</style>
