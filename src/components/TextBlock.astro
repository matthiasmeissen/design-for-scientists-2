---
const { title, id } = Astro.props;
---

<div class="container" id={id}>
    <h3>{ title }</h3>
    <div class="inner">
        <slot>
    </div>
</div>

<style>
    .container {
        width: 100%;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 32px;
        padding-top: 80px;
    }
    
    .inner {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }
</style>
