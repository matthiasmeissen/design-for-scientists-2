---
import Block from "./Block.astro";

const { 
    title = "Title", 
    body = "Body", 
    titlegood = "Title Good", 
    bodygood = "Body Good",
    imagegood = "/images/visual-hierarchy-good.svg",
    titlebad = "Title Bad",
    bodybad = "Body Bad",
    imagebad = "/images/visual-hierarchy-bad.svg",
    id 
} = Astro.props;
---

<div class="detailsblock" id={id}>
    <Block>
        <h3 slot = "first">{ title }</h3>
        <p slot = "second">{ body }</p>
    </Block>

    <Block>
        <div slot = "first" class="text">
            <div class="tag success">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M14.5998 8.00033H21C22.1046 8.00033 23 8.89576 23 10.0003V12.1047C23 12.3659 22.9488 12.6246 22.8494 12.8662L19.755 20.3811C19.6007 20.7558 19.2355 21.0003 18.8303 21.0003H2C1.44772 21.0003 1 20.5526 1 20.0003V10.0003C1 9.44804 1.44772 9.00033 2 9.00033H5.48184C5.80677 9.00033 6.11143 8.84246 6.29881 8.57701L11.7522 0.851355C11.8947 0.649486 12.1633 0.581978 12.3843 0.692483L14.1984 1.59951C15.25 2.12534 15.7931 3.31292 15.5031 4.45235L14.5998 8.00033ZM7 10.5878V19.0003H18.1606L21 12.1047V10.0003H14.5998C13.2951 10.0003 12.3398 8.77128 12.6616 7.50691L13.5649 3.95894C13.6229 3.73105 13.5143 3.49353 13.3039 3.38837L12.6428 3.0578L7.93275 9.73038C7.68285 10.0844 7.36341 10.3746 7 10.5878ZM5 11.0003H3V19.0003H5V11.0003Z"/></svg>
            </div>
            <h4>{ titlegood }</h4>
            <p class="body-s">{ bodygood }</p>
        </div>
        <div slot = "second" class="imagecontainer">
            <img src={ imagegood } />
        </div>
    </Block>

    <Block>
        <div slot = "first" class="text">
            <div class="tag warning">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M9.40017 16H3C1.89543 16 1 15.1046 1 14V11.8957C1 11.6344 1.05118 11.3757 1.15064 11.1342L4.24501 3.61925C4.3993 3.24455 4.76447 3 5.16969 3H22C22.5523 3 23 3.44772 23 4V14C23 14.5523 22.5523 15 22 15H18.5182C18.1932 15 17.8886 15.1579 17.7012 15.4233L12.2478 23.149C12.1053 23.3508 11.8367 23.4184 11.6157 23.3078L9.80163 22.4008C8.74998 21.875 8.20687 20.6874 8.49694 19.548L9.40017 16ZM17 13.4125V5H5.83939L3 11.8957V14H9.40017C10.7049 14 11.6602 15.229 11.3384 16.4934L10.4351 20.0414C10.3771 20.2693 10.4857 20.5068 10.6961 20.612L11.3572 20.9425L16.0673 14.27C16.3172 13.9159 16.6366 13.6257 17 13.4125ZM19 13H21V5H19V13Z"/></svg>
            </div>
            <h4>{ titlebad }</h4>
            <p class="body-s">{ bodybad }</p>
        </div>
        <div slot = "second" class="imagecontainer">
            <img src={ imagebad } />
        </div>
    </Block>
</div>

<style>
    .detailsblock {
        display: flex;
        flex-direction: column;
        gap: 120px;
        padding-top: 120px;
    }

    .text {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .tag {
        width: fit-content;
        display: inline-block;
        padding: 4px 18px 2px;
        border-radius: 20px;
        margin-bottom: 24px;
    }

    .success {
        background-color: var(--color-background-success);
        color: var(--color-foreground-success);
    }

    .warning {
        background-color: var(--color-background-warning);
        color: var(--color-foreground-warning);
    }

    .tag > svg {
        fill: inherit;
    }

    .imagecontainer {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        aspect-ratio: 1;
        background-color: hsl(0, 0%, 90%);
        border-radius: 12px;
        padding: 20px;
    }

    img {
        width: inherit;
        border-radius: 12px;
    }
</style>
