---
import "../styles/global.css";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<main>
			<slot />
		</main>
	</body>
</html>

<style>
	main {
	  display: flex;
	  flex-direction: column;
	  gap: var(--spacing-6xl);
	  width: 100%;
	  max-width: 1200px;
	  margin: 80px auto;
	  padding: 0 32px;
	}

	@media (max-width: 820px) {
		main {
			gap: var(--spacing-4xl);
			margin: 60px auto;
		}
	}

	@media (max-width: 620px) {
	  	main {
	    	padding: 0 16px;
	  	}
	}

</style>
